<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.level11.alphabet.quiz2back"
    android:background="#FFDFAF">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/starstruck"
        android:layout_marginLeft="80dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/partypop"
        android:layout_marginLeft="80dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/partypop2"
        android:layout_marginLeft="80dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="350dp"
        android:text="You finished Lesson 2!"
        android:textAlignment="center"
        android:textSize="32dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="400dp"
        android:text="Fantastic job! "
        android:textAlignment="center"
        android:textSize="40dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/quiz2back"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="finish!"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="550dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#FFB627"/>


</FrameLayout>



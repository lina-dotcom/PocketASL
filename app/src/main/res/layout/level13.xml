<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.level11.Level13Activity"
    android:background="#FFFADC">

    <ImageButton
        android:id="@+id/level13back"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_baseline_arrow_back_24"
        android:backgroundTint="#FFC36A" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginStart="0dp"
        android:text="Lesson 3: Letters Q-Z"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="370dp"
        android:layout_marginStart="0dp"
        android:text="In this Lesson, you will be learning:"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="460dp"
        android:layout_marginStart="0dp"
        android:text="- The signs for letters Q-Z!"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/level13go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="530dp"
        android:layout_marginStart="120dp"
        android:text="Let's Go!"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal"
        android:backgroundTint="#FFC36A" />



</androidx.constraintlayout.widget.ConstraintLayout>